@using Sportify.ViewModels
@model ProfileViewModel
@{
    ViewData["Title"] = "Profilim ve Eğitimlerim";
}

<style>
    .horizontal-scroll-container {
        display: flex;
        overflow-x: auto;
        padding-bottom: 1rem;
    }

    .info-card {
        flex: 0 0 auto;
        width: 300px;
        margin-right: 1rem;
    }

    .horizontal-scroll-container::-webkit-scrollbar {
        height: 8px;
    }

    .horizontal-scroll-container::-webkit-scrollbar-thumb {
        background-color: #007bff;
        border-radius: 10px;
    }
</style>

<div class="container">
    <h2 class="mt-4">Profilim</h2>
    <hr />
    @if(Model.MyTrainings!=null&&Model.MyTrainings.Any())
    {
        @foreach (var item in Model.MyTrainings)
        {
            <div class="card info-card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title text-primary">Eğitmen Adı: @item.TrainerName</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Çalışma Saatleri: @item.WorkStartTime - @item.WorkEndTime</h6>
                    <h6 class="card-subtitle mb-2 text-muted">Çalıştığı Salon: @item.gym.GymName</h6>
                    <div class="card-footer bg-light d-flex justify-content-end">
                        <a asp-controller="Trainer" asp-action="EditTrainer" asp-route-id="@item.TrainerId" class="btn btn-sm btn-outline-warning me-2">Düzenle</a>
                        <a asp-controller="Trainer" asp-action="DeleteTrainer" asp-route-id="@item.TrainerId" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </div>
            </div>
        }
    }

    <h3 class="mt-5 mb-3">Randevularım</h3>

    @if (Model.MyAppointments != null && Model.MyAppointments.Any())
    {
        <div class="horizontal-scroll-container">
            @foreach (var item in Model.MyAppointments)
            {
                <div class="card info-card shadow-sm border-primary">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Eğitmen: @item.trainer.TrainerName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Hizmet: @item.service.ServiceName</h6>

                        <ul class="list-group list-group-flush mt-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Randevu No:
                                <span>@item.AppointmentId</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Süre:
                                <span>@item.service.ServiceTime dakika</span>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-end">
                        <a asp-controller="Appointment" asp-action="DeleteAppointment" asp-route-id="@item.AppointmentId" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Kayıtlı randevunuz bulunmamaktadır.
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Appointment" asp-action="BookAppointment" class="btn btn-primary">Yeni Randevu Al</a>
    </div>

    <hr class="mt-5" />

    <h3 class="mt-5 mb-3">Eğitimlerim</h3>

    @if (Model.MyServices != null && Model.MyServices.Any())
    {
        <div class="horizontal-scroll-container">
            @foreach (var item in Model.MyServices)
            {
                <div class="card info-card shadow-sm border-success">
                    <div class="card-body">
                        <h6 class="card-subtitle mb-2 text-muted">Eğitim: @item.ServiceName</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Eğitim Süresi: @item.ServiceTime</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Eğitim Ücreti: @item.ServicePrice</h6>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-end">
                        <a asp-controller="Service" asp-action="EditService" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-warning me-2">Düzenle</a>
                        <a asp-controller="Service" asp-action="DeleteService" asp-route-id="@item.ServiceId" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            Kayıtlı eğitmen eğitiminiz bulunmamaktadır.
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Trainer" asp-action="CreateTrainer" class="btn btn-success">Yeni Eğitmen Kaydı Oluştur</a>
    </div>


    <hr class="mt-5" />

    <h3 class="mt-5 mb-3">Spor Salonlarım</h3>

    @if (Model.MyGyms != null && Model.MyGyms.Any())
    {
        <div class="horizontal-scroll-container">
            @foreach (var item in Model.MyGyms)
            {
                <div class="card info-card shadow-sm border-info">
                    <div class="card-body">
                        <h5 class="card-title text-info">@item.GymName</h5>
                        <h6 class="card-subtitle mb-2 text-muted">ID: @item.GymId</h6>

                        <ul class="list-group list-group-flush mt-3">
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                Çalışma Saatleri:
                                <span>@item.OpenTime</span>-<span>@item.CloseTime</span>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer bg-light d-flex justify-content-end">
                        <a asp-controller="Gym" asp-action="EditGym" asp-route-id="@item.GymId" class="btn btn-sm btn-outline-warning me-2">Düzenle</a>
                        <a asp-controller="Gym" asp-action="DeleteGym" asp-route-id="@item.GymId" class="btn btn-sm btn-outline-danger">Sil</a>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-secondary" role="alert">
            Kayıtlı spor salonu kaydınız bulunmamaktadır.
        </div>
    }

    <div class="mt-4 mb-5">
        <a asp-controller="Gym" asp-action="CreateGym" class="btn btn-info">Yeni Spor Salonu Kaydı Oluştur</a>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}